# grep CONFIG_PAGE_TABLE_ISOLATION /boot/config*
# CONFIG_PAGE_TABLE_ISOLATION only shows kernel OPTION
# IT DOESN'T SHOW KPTI STATUS

# check of intel meltdown security patch
dmesg | grep isolation
# Kernel/User page tables isolation: (disabled / enabled) on command line.

# disable isolation
sudo nano /etc/default/grub
# append nopti to :
GRUB_CMDLINE_LINUX_DEFAULT="quiet splash nopti"
sudo update-grub

sudo reboot
# check:
dmesg | grep isolation
